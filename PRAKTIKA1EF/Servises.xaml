        <DataGrid x:Name="Services" Margin="0,0,0,209" SelectionChanged="Services_SelectionChanged" />
        <Button x:Name="ADDstring" Content="Добавить" HorizontalAlignment="Left" Margin="203,514,0,0" VerticalAlignment="Top" Height="38" Width="154" Background="#FF98C62D" Click="ADDstring_Button_Click"/>
