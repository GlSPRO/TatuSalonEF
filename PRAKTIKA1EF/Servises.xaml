        <TextBox x:Name="TB_Otchestvo" HorizontalAlignment="Left" Margin="204,423,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="503" Height="29"/>
        <TextBlock HorizontalAlignment="Left" Margin="82,423,0,0" TextWrapping="Wrap" Text="Название услуги:" VerticalAlignment="Top" Height="27" Width="110"/>
        <TextBox x:Name="TB_age" HorizontalAlignment="Left" Margin="204,455,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="503" Height="29"/>
        <TextBlock HorizontalAlignment="Left" Margin="82,455,0,0" TextWrapping="Wrap" Text="Цена:" VerticalAlignment="Top" Height="27" Width="59"/>
    </Grid>
</Window>
